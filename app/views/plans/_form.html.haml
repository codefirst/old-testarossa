= form_for @plan, :html => { :class => 'form-horizontal' } do |f|
  - if @plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan.errors.count, "error")} prohibited this plan from being saved:"
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :project, :class => 'control-label'
    .controls
      = @plan.project.name
      = hidden_field_tag :project, @plan.project.id
  .control-group
    = f.label :started_at, :class => 'control-label'
    .controls
      = f.text_field :started_at, :class => "date"
  .control-group
    = f.label :finished_at, :class => 'control-label'
    .controls
      = f.text_field :finished_at, :class => "date"
  .control-group
    = f.label :expect, :class => 'control-label'
    .controls
      = f.number_field :expect
  .control-group
    = f.label :actual, :class => 'control-label'
    .controls
      = f.number_field :actual
  .control-group
    = f.label :notes, :class => 'control-label'
    .controls
      = f.text_area :notes, :rows => 3, :class => 'span7'
  .control-group
    .actions.controls
      = f.submit 'Save'

